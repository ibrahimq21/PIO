<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPageActivity">

    <ImageView
        android:id="@+id/main_header"
        android:layout_width="325dp"
        android:layout_height="189dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/images" />

    <Button
        android:id="@+id/bus_route"
        android:layout_width="167dp"
        android:layout_height="62dp"
        android:layout_marginTop="128dp"
        android:text="@string/display_rut"
        app:layout_constraintEnd_toEndOf="@+id/main_header"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/main_header"
        app:layout_constraintTop_toBottomOf="@+id/main_header" />

    <Button
        android:id="@+id/display_uni_map"
        android:layout_width="173dp"
        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/display_map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bus_route"
        app:layout_constraintStart_toStartOf="@+id/bus_route"
        app:layout_constraintTop_toBottomOf="@+id/bus_route" />
</androidx.constraintlayout.widget.ConstraintLayout>